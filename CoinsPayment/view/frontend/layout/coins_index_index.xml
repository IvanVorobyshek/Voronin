<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Amount of coins</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Voronin\CoinsPayment\Block\Customer\Coins" name="coins_view" template="Voronin_CoinsPayment::customer/tab/coins/customer_view.phtml" cacheable="false">
            </block>
        </referenceContainer>
    </body>
</page>
