<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_form">
            <block class="Voronin\CoinsPayment\Block\Adminhtml\Coins" name="customer_coins_tab_view"
                   ifconfig="Voronin_Loyalty/Loyalty_Module/Loyalty_Is_Enabled">
                <arguments>
                    <argument name="tab_label" xsi:type="string" translate="true">Coins</argument>
                    <argument name="sort_order" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
